<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="sap.custom.plugin.testplugin.sfcdetails.sfcdetails.controller.MainView" width="100%" height="100%">
		
        <Panel 
                id="panelPlugin"  
                width="100%"
                height="100%"
                expandable="false"
                expanded="false"
                accessibleRole="Region"
                backgroundDesign="Transparent"
                class="sapUiNoContentPadding">  
        <headerToolbar>
            <Toolbar height="3rem">
                <Button
                    id="backButton"
                    visible="false"
                    text="{i18n>template.back.btn}"
                    tooltip="{i18n>template.back.tooltip}"
                    icon="sap-icon://nav-back"
                    press="onBackPress"/>
                <Title id="headerTitle" text=""/>
                <ToolbarSpacer/>
                <Button
                    id="closeButton"
                    visible="false"
                    tooltip="{i18n>template.close.tooltip}"
                    icon="sap-icon://decline"
                    press="onClosePress"/>
            </Toolbar>
        </headerToolbar>
        <content> 
            <Text id="textPlugin" text="template" class="textFontSize" textAlign="Center" width="100%"/>
                                <HBox width="100%">
                        <items>
                            <Label id="podTypeLabel" text="{i18n>podType}:" class="sapUiTinyMarginEnd"/>
                            <Label id="podType" text="{/podType}" width="100%" />
                        </items>
                    </HBox>
                    <HBox width="100%">
                        <items>
                            <Label id="inputTypeLabel" text="{i18n>inputType}:" class="sapUiTinyMarginEnd"/>
                            <Label id="inputType" text="{/inputType}" width="100%" />
                        </items>
                    </HBox>
                    <HBox width="100%" visible="{= ${/podType} === 'WORK_CENTER'}">
                        <items>
                            <Label id="workCenterLabel" text="{i18n>workCenter}:" class="sapUiTinyMarginEnd"/>
                            <Label id="workCenter" text="{/workCenter}" width="100%" />
                        </items>
                    </HBox>
                    <HBox width="100%" visible="{= ${/podType} === 'WORK_CENTER'}">
                        <items>
                            <Label id="operationLabel" text="{i18n>operation}:" class="sapUiTinyMarginEnd"/>
                            <Label id="operation" text="{/operation}" width="100%" />
                        </items>
                    </HBox>
                    <HBox width="100%">
                        <items>
                            <Label id="resourceLabel" text="{i18n>resource}:" class="sapUiTinyMarginEnd"/>
                            <Label id="resource" text="{/resource}" width="100%" />
                        </items>
                    </HBox>
                    <HBox width="100%">
                        <items>
                            <Label id="selectionCountTypeLabel" text="{i18n>selectionCount}:" class="sapUiTinyMarginEnd"/>
                            <Label id="selectionCount" text="{/selectionCount}" width="100%" />
                        </items>
                    </HBox>
        </content>
	    </Panel>		
        
  
</mvc:View>